            <xctk:WatermarkTextBox Height="60" Canvas.Left="18" Canvas.Top="92" Width="252" FontSize="24">
                <xctk:WatermarkTextBox.Watermark>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Sudarikov3ISP1113;component/Icon/dogCard.png" Stretch="Fill" />
                        <TextBlock Text="Enter Age" Margin="4,0,0,0" />
                    </StackPanel>
                </xctk:WatermarkTextBox.Watermark>
            </xctk:WatermarkTextBox>
        </Canvas>
        <xctk:SplitButton x:Name="C" Height="100" Width="100" Content="Click Me" Click="C_Click" Margin="604,118,96,232">
