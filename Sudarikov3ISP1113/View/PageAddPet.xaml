        <Canvas HorizontalAlignment="Left" Height="419" Margin="76,21,0,0" VerticalAlignment="Top" Width="296">
            <xctk:LongUpDown x:Name="LongAge" Watermark="Возраст" TextAlignment="Left"  FormatString="" ClipValueToMinMax="False"  Maximum="100" Width="82" Minimum="0" Canvas.Left="18" Canvas.Top="157" FontSize="16" Height="30" />
            <xctk:WatermarkTextBox Height="58" Canvas.Left="18" Canvas.Top="14" Width="268" FontSize="24">
