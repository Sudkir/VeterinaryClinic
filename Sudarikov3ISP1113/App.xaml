<Application x:Class="Sudarikov3ISP1113.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="MainText">
            <Setter Property="Control.HorizontalAlignment" Value="Center" />
            <Setter Property="Control.Foreground" Value="Black" />
            <Setter Property="Control.VerticalAlignment" Value="Center" />
            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
            <Setter Property="Control.FontFamily" Value="Segoe UI" />
        </Style>

        <Style x:Key="MainImg">
            <Setter Property="Control.Margin" Value="10 0 0 0" />
            <Setter Property="Control.Width" Value="45" />
        </Style>

        <Style x:Key="RectangleColor">
            <Setter Property="Rectangle.Fill" Value="Black" />
            <Setter Property="Rectangle.Stroke" Value="Black" />
        </Style>
    </Application.Resources>
</Application>